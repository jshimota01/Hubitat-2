preferences {
    input("timer", "text", title: "Zone Run Time", required: false, defaultValue: "1")
}

metadata {
    definition (name: "Irrigation Controller Zone", version: "1", author: "Michael Ritchie", namespace: "mlritchie") {
        capability "Switch"
		
		command "zoneOnFor", [[name:"Zone On For", type: "NUMBER", description: "How many minutes?"]]
    }
}

// handle commands
def zoneOnFor(value) {
    value = checkTime(value)
	parent.relayOnFor(getZoneNumber(), value)
}

def on() {
    def value = checkTime(settings.timer)
	parent.relayOnFor(getZoneNumber(), value)
}

def off() {
	parent.relayOff(getZoneNumber())
}

def checkTime(t) {
	def time = (t ?: 0).toInteger()
    time > 60 ? 60 : time
}

def getZoneNumber() {
	def networkID = device.deviceNetworkId.toString().split("-")
	return networkID[1]
}
